/! Footer
footer.footer
  .footer_body
    .container
      .row
        /! Newsletter
        .col-lg-3.footer_col
          .newsletter_container.d-flex.flex-column.align-items-start.justify-content-end
            .footer_logo.mb-auto
              a href="#"  RHKnowledge
        /! About
        .col-lg-2.offset-lg-3.footer_col
          div
            .footer_title References
            ul.footer_list
              - navigation_items.each do |navigation_item|
                - if navigation_item.code == 'upcoming_events'
                - elsif navigation_item.code == 'networks_and_partners'
                - elsif navigation_item.code == 'contacts'
                -else
                  li
                    - if navigation_item.page.present?
                      = link_to detail_articles_path(navigation_item.page.slug), data: { toggle: 'tooltip', placement: 'top' }, title: navigation_item.tooltip
                        | #{navigation_item.title.upcase}
                    - else
                      = link_to landing_article_path(navigation_item.code), data: { toggle: 'tooltip', placement: 'top' }, title: navigation_item.tooltip
                        | #{navigation_item.title.upcase}
                
          
        /! Help & Support
        .col-lg-2.footer_col
          .footer_title Help &amp; Support
          ul.footer_list
            - navigation_items.each do |navigation_item|
              - if navigation_item.code == 'upcoming_events'
                li
                  = link_to events_path, data: { toggle: 'tooltip', placement: 'top' }, title: navigation_item.tooltip
                    | #{navigation_item.title.upcase}
              - elsif navigation_item.code == 'networks_and_partners'
                li
                  = link_to networks_path, data: { toggle: 'tooltip', placement: 'top' }, title: navigation_item.tooltip
                    | #{navigation_item.title.upcase}
              - elsif navigation_item.code == 'contacts'
                li
                  = link_to contacts_path, data: { toggle: 'tooltip', placement: 'top' }, title: navigation_item.tooltip
                    | #{navigation_item.title.upcase}
        /! Privacy
        .col-lg-2.footer_col.clearfix
          div
            .footer_title Conferences
            ul.footer_list
              li
                = link_to admin_path
                  | Admin
              li
                a href="https://rhknowledge.ui.ac.id/id/conferences" Conferences
